{
  "name": "web-app-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node index",
    "dev": "cross-env NODE_ENV=development node --inspect index",
    "build": "npm run build:server && npm run build:client",
    "build:client": "cross-env NODE_ENV=production webpack --config webpack/client --progress",
    "build:server": "cross-env NODE_ENV=production webpack --config webpack/server --progress",
    "clean": "rm -rf build",
    "rebuild": "npm run clean && npm run build"
  },
